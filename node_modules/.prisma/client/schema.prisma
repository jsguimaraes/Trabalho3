generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Usuario {
  id         Int         @id @default(autoincrement())
  nome       String
  email      String      @unique
  senha      String
  papel      String
  permissoes Permissao[]
  acessos    Acesso[]
}

model Modulo {
  id         Int         @id @default(autoincrement())
  nome       String      @unique
  permissoes Permissao[]
}

model Permissao {
  id        Int     @id @default(autoincrement())
  usuario   Usuario @relation(fields: [usuarioId], references: [id])
  usuarioId Int
  modulo    Modulo  @relation(fields: [moduloId], references: [id])
  moduloId  Int
}

model Acesso {
  id        Int      @id @default(autoincrement())
  usuario   Usuario  @relation(fields: [usuarioId], references: [id])
  usuarioId Int
  modulo    String
  permitido Boolean
  data      DateTime @default(now())
}
